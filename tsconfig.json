{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "baseUrl": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/templates/**",
    "generators"
  ]
}
