{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "<%appName%>/*": ["./*"],
      "<%appName%>": ["./index.ts"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js"
  ]
}
